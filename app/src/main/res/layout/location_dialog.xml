<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:layout_gravity="center_horizontal|center_vertical"
                                             android:padding="15dp">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Latitude"
            android:ems="10"
            android:id="@+id/editTextLatitude" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
            android:hint="Longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextLongitude"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextLatitude"
            app:layout_constraintStart_toStartOf="@+id/editTextLatitude"
            app:layout_constraintEnd_toEndOf="@+id/editTextLatitude"/>

    <Button
            app:layout_constraintTop_toBottomOf="@id/editTextLongitude"
            app:layout_constraintStart_toStartOf="@id/editTextLongitude"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/buttonAccept" app:layout_constraintEnd_toEndOf="@+id/editTextLongitude" tools:text="Onay"
            android:text="Onay" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>